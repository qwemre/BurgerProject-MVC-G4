@model AppUser
<h5 class="text-center">Password Change</h5>
<form asp-action="UpdateUserPassword" method="post">
    <div class="form-group">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" name="password" >

    </div>
    <div class="form-group">
        <label class="form-label">New Password</label>
        <input type="password" class="form-control mb-1" name="newPassword" >
    </div>
    <div class="form-group">
        <label class="form-label">Confirm Password</label>
        <input type="password" class="form-control mb-1" name="confirmPassword" >

    </div>

    <div class="text-center mt-3 ">
        <button type="submit" class="btn btn-primary">Save changes</button>&nbsp;
        <button type="button" class="btn btn-default">Cancel</button>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}